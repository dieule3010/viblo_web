{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django",
      "type": "debugpy",
      "request": "launch",
      "args": [
        "runserver"
      ],
      "django": true,
      "autoStartBrowser": false,
      "program": "${workspaceFolder}/manage.py",
      "console": "integratedTerminal",  // Thêm phần này để xem log debug trong terminal của VS Code.
      "justMyCode": false  // Thêm phần này để debug cả mã nguồn bên ngoài project Django (chẳng hạn thư viện third-party nếu có).
    }
  ]
}
